/* components/tabbar/tabbar.wxss */
.box{
  width: 100%;
  height: 96rpx;
  background:rgba(255,255,255,1);
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid rgba(237,237,237,1);
  text-align: center;
  z-index: 9999;
}
.box .item{
  display: inline-block;
  position: relative;
  height:100%;
  width: 100rpx;
  
}
.box .item2{
  margin: 0 190rpx;
}
.box .item text{
  font-size:18rpx;
  font-family:PingFangHK-Medium,PingFangHK;
  font-weight:500;
  color:rgba(122,126,131,1);
  line-height:25rpx;
  letter-spacing:1rpx;  
  display: inline-block;
  padding-top: 40rpx;

}
.img1{
  width: 51rpx;
  height: 42rpx;
  margin-left: -28rpx;
}
.img11{
  width: 56rpx;
  height: 40rpx;
  margin-left: -28rpx;
}
.img2{
  width: 51rpx;
  height: 46rpx;
  margin-left: -25.5rpx;
}
.img3{
  width: 41rpx;
  height: 46rpx;
  margin-left: -20.5rpx;
}
.box .item .img{
  position: absolute;
  bottom: 40rpx;
  left: 50%;
}
.box .item .active{
  color:rgba(0,0,0,1);
}