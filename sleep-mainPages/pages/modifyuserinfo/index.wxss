/* sleep-mainPages/pages/modifyuserinfo/index.wxss */
.box{
    width:100% ;
    padding: 26rpx;
    margin: 0 auto;

}
.cont{
    border-top: 1rpx solid #EDEDED;
    height: 120rpx;
    width: 100%;
    line-height: 120rpx;
    position: relative;
}
.tit{
    font-size: 34rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;
    line-height:120 rpx;
}
.cont_2{
    font-size: 34rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #666666;
    line-height: 120rpx;
    float: right;
    padding-right: 35rpx;
}
.head{
    height: 144rpx;
    line-height: 144rpx;
}
.head image{
    width: 106rpx;
    height: 106rpx;
    border-radius: 50%;
    float: right;
    margin-right: 35rpx;
    margin-top: 19rpx;
}
.jiantou{
    height: 15rpx;
    width: 15rpx;
    border: 2rpx solid #7D7D7D;
    border-top: 1rpx solid transparent;
    border-left: 1rpx solid transparent;
    transform: rotate(-45deg);
    position: absolute;
    right: 0;
    top: 50%;
    margin-top: -5rpx;
}
.btn{
    position:fixed;
    bottom: 0;
    width: 100%;
    height: 96rpx;
    background-color: #4052E7;
    line-height: 96rpx;
    color: white;
    text-align: center;    
    font-size: 36rpx;
    font-family: PingFangHK-Semibold, PingFangHK;
    border-radius: 0;
    font-weight: 600;
}
