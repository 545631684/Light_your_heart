/* sleep-testPages/pages/TestBox/TestBox.wxss */
.test_box{
  width: 640rpx;
  height: auto;
  margin: 0 auto;
  margin-bottom: 40rpx;
  text-align: center;
}
.ic_img{
  display: block;
  width: 100%;
  margin: 0 auto;
}


.nav-tab {
  width: 100%;
  height: 76rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.tab-item {
  text-align: center;
  font-size: 28rpx;
  height: 100%;
  line-height: 40rpx;
  padding-top: 16rpx;
}

.tab-item.active {
  color: #3674F3;
  position: relative;
}

.tab-item.active::after {
  content: '';
  width: 100%;
  height: 4rpx;
  background: #3674F3;
  position: absolute;
  left: 0;
  bottom: 0;
}

.box{
  width: 90%;
  margin: 40rpx auto;
  /* box-shadow: 5px 5px 5px #ccc; */
  height: 150rpx;
  border: 1px solid rgba(240, 240, 240);
  border-radius: 20rpx;

}
.title{
  margin-top: 10rpx;
  font-size: 35rpx;
  font-weight: bold;
  margin-left:5%;

}
.info{
  margin-top: 20rpx;
  font-size: 25rpx;
  width: 87%;
  height: 30rpx;
  margin-left: 10%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}