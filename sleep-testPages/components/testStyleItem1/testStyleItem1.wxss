/* components/testStyleItem1/testStyleItem1.wxss */
.box{
    width: 600rpx;
    margin: 0 auto;
    margin-top: 102rpx;
}
.title{
    width:100%;
    font-size:34rpx;
    font-family:PingFangHK-Medium,PingFangHK;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:48rpx;
    letter-spacing:1rpx;
    padding-bottom: 9rpx;
}
radio-group{
    width: 100%;
}
.inner .selItem{
    display: block;
    width:100%;
    height:105rpx;
    background:rgba(247,247,247,1);
    border-radius:12rpx;   
    position: relative;
    margin-top: 36rpx;
    border:2rpx solid rgba(0,0,0,0);
}
.inner .selItem .doc{
    width:53rpx;
    height:53rpx;
    border:2rpx solid rgba(209,209,209,1);
    line-height: 48rpx;
    font-size:36rpx;
    font-family:PingFangHK-Medium,PingFangHK;
    font-weight:500;
    color:rgba(51,51,51,1);
    text-align: center;
    border-radius: 50%;
    position: absolute;
    top: 26rpx;
    left: 42rpx;
}
.inner .selItem .text{
    font-size:28rpx;
    font-family:PingFangHK-Regular,PingFangHK;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height: 105rpx;    
    height: 100%;
    position: absolute;
    top: 0;
    left: 126rpx;
}
.inner .active .doc{
    background:linear-gradient(180deg,rgba(60,138,249,1) 0%,rgba(28,82,240,1) 100%);
    color:rgba(255,255,255,1);
}
.inner .active .text{
    color:rgba(28,82,240,1);
}
.inner .active{
    border:2rpx solid rgba(28,82,240,1);
}