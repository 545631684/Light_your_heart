/* components/testStyle2/testStyle2.wxss */
.box{
    width:600rpx;   
    margin: 0 auto;
    margin-top: 67rpx;
}
.title{
    font-size:34rpx;
    font-family:PingFangHK-Medium,PingFangHK;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:48rpx;
    letter-spacing:1rpx;
}
.tip{
    font-size:30rpx;
    font-family:PingFangHK-Medium,PingFangHK;
    font-weight:500;
    color:rgba(28,82,240,1);
    line-height:42rpx;
    letter-spacing:1rpx;
    text-align: right;
}
.select{
    height: 130rpx;
    width: 100%;
}
.select>swiper-item{
    width: 95rpx;
    height: 100%;  
    text-align: center;
    position: relative;
}
.select swiper-item .item{
    text-align: center;
    width: 100%;
    height: 100%;   
    border-top:4rpx solid #D8D8D8 ;
    line-height: 190rpx;
    font-size:30rpx;
    font-family:PingFangHK-Medium,PingFangHK;
    font-weight:500;
    color:rgba(216,216,216,1);
    letter-spacing:1rpx;

}
.select swiper-item .bor{
    width:3rpx;
    height:42rpx;
    background:rgba(216,216,216,1);
    position: absolute;
    top: 0;
    left: 50%;
    margin-left: -1.5rpx;
}
.select .active .bor{
    width:7rpx;
    height:76rpx;
    margin-left: -3.5rpx;
    background:linear-gradient(180deg,rgba(60,138,249,1) 0%,rgba(28,82,240,1) 100%);
}
.select .active .item{
    color:rgba(28,82,240,1);
    font-size: 32rpx;
}