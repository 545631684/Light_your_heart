/* pages/doctor/doctor.wxss */
page {
  background: #192b51;
  /* background: #0a1525; */
  color: #fff;

}
.doctor_page{
  width: 100%;
}
view,
text {
  box-sizing: border-box;
}

.doctor_tab {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #fff;
}

.tab_item.active {
  font-size: 30rpx;
  font-weight: 600;
  position: relative;
}

.tab_item.active::after {
  content: '';
  width: 50%;
  height: 2rpx;
  background: #fff;
  position: absolute;
  left: 25%;
  bottom: -10rpx;
}

.tips {
  width: 550rpx;
  height: 40rpx;
  margin: 0 auto;
  background: rgba(36, 73, 159, 0.12);
  font-size: 18rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 24rpx;
}

.doctor_title {
  width: 100%;
  padding-left: 24rpx;
  margin-top: 20rpx;
}

.title_tip {
  font-size: 22rpx;
  color: #dcd;
}

.dictor_date {
  clear: both;
  display: inline-block;
  width: auto;
  /* white-space: nowrap; */
  overflow-x: scroll;
}

.doctor_med {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding-left: 24rpx;
}

.date_item {
  width: 29%;
  display: inline-block;
  margin-left: 24rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 12rpx;
  border: 1rpx solid #ccc;
  padding: 10rpx 14rpx;
}

.date_item.active,.time_can.active{
  border: 1rpx solid #cea9ce;
  color: #cea9ce;
}

.doctor_med {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.med_item {
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 14rpx;
  font-size: 26rpx;
  background: rgba(255, 255, 255, .15);
}

.time_box {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 104rpx;
}

.time_can {
  width: 220rpx;
  height: 50rpx;
  line-height: 48rpx;
  float: left;
  margin-right: 90rpx;
  margin-top: 20rpx;
  text-align: center;
  border-radius: 12rpx;
  border: 1rpx solid #ccc;
  font-size: 24rpx;
}

.time_can:nth-child(2n) {
  margin-right: 0rpx;
}
.time_tips{
  width: 100%;
  font-size: 26rpx;
  margin-top: 24rpx;
  color: #fff;
  text-align: center;
}
.preview_btn{
  width: 692rpx;
  height: 68rpx;
  background: #ffc71ce6;
    border-radius: 16rpx;
    color: #fff;
  text-align: center;
  line-height: 68rpx;
  margin: 0 auto;
  margin-top: 120rpx;
}